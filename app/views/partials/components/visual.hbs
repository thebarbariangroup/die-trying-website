<section class="dtc-visual">
  {{#> components/slider }}
    <div class="dtc-visual_content">
      <div class="dtc-visual_header">
        <div class="dtc-visual_headline">
          {{{ headline }}}
        </div>
      </div>
      <div class="dtc-visual_body">
        <div class="dtc-visual_figure">
          <figure class="dtc-figure dtc-visual_figure--nyc">
            {{> global/icons/nyc }}
          </figure>
        </div>
        <div class="dtc-visual_figure">
          <figure class="dtc-figure dtc-visual_figure--trashpile">
            {{> global/icons/trashpile }}
          </figure>
        </div>
      </div>
    </div>
  {{/components/slider}}
</section>